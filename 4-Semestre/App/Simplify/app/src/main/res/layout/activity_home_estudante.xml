<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorBackground"
    tools:context=".HomeEstudante">

    <ScrollView
        style="@android:style/Widget.Holo.ScrollView"
        android:layout_width="288dp"
        android:layout_height="572dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnProfile"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Meu perfil"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:icon="@drawable/profile"
                app:iconGravity="top"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/button7"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:baselineAligned="false"
                android:text="horarios"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:icon="@drawable/horarios"
                app:iconGravity="top"
                app:iconSize="20dp" />

            <Button
                android:id="@+id/btnServico"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Serviços"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:icon="@drawable/services"
                app:iconGravity="top"
                app:iconSize="20dp"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnSolicita"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Solicitações"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:icon="@drawable/carbon"
                app:iconGravity="top"
                app:iconSize="20dp"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnQuiz"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Quiz"

                android:textAllCaps="true"
                android:textStyle="bold"
                app:icon="@drawable/quiz"
                app:iconGravity="top"
                app:iconSize="20dp"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="testte scroll"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="teste"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="scroll"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="scroll teste"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>